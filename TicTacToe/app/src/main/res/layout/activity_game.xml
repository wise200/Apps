<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="memorytrainer.jwise200.com.tictactoe.Game"
    android:background="@color/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/board"
        android:background="@drawable/tttboard"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/board"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true">



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:id="@+id/space1"
                android:background="@drawable/blank"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:id="@+id/space2"
                android:background="@drawable/blank"
                android:layout_marginLeft="30dp"/>

            <ImageView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:id="@+id/space3"
                android:background="@drawable/blank"
                android:layout_marginLeft="30dp"/>
        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:id="@+id/space4"
                android:background="@drawable/blank"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:id="@+id/space5"
                android:background="@drawable/blank"
                android:layout_marginLeft="30dp"/>

            <ImageView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:id="@+id/space6"
                android:background="@drawable/blank"
                android:layout_marginLeft="30dp"/>

        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:id="@+id/space7"
                android:background="@drawable/blank"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:id="@+id/space8"
                android:background="@drawable/blank"
                android:layout_marginLeft="30dp"/>

            <ImageView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:id="@+id/space9"
                android:background="@drawable/blank"
                android:layout_marginLeft="30dp"/>

        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/gameTypeSignifierPlaceHolder"
        android:id="@+id/gameTypeSignifier"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restart"
        android:id="@+id/restartButton"
        android:layout_above="@+id/gameTypeSignifier"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
